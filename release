#!/usr/bin/env sh

TAG=$(git tag)
export CUR_DIR="${PWD##*/}"
export OUT_DIR=`pwd`/"$CUR_DIR"-"$TAG"

rm -rf $OUT_DIR
mkdir -p $OUT_DIR

git archive --prefix "$CUR_DIR"/ "$TAG" | tar -x -C "$OUT_DIR"
git submodule foreach --recursive 'git archive HEAD | tar -x -C "$OUT_DIR"/"$CUR_DIR"/"$(echo "$displaypath" | sed -e "s/\\([^[:alpha:]]*\\)\\(.*\\)/\2/g")"'
